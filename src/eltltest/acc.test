#!/bin/sh

. ./defs || exit 1

set -e
cat >prelude <<EOF
X=(
    0 1 \$0
    accept 1
  )
EOF

cat >input <<EOF
include prelude
A=(
    0 1 \$2
    1 2 \$0
    accept 0
  )
%
A(1,a,a|b)&X(!f)
EOF
run 0 ./acc input || exit 1

cat >input <<EOF
X=(
    0 1 true
    1 2 \$0
    accept 2
  )
U=(
    0 0 \$0
    0 1 \$1
    accept 1
  )
F=U(true, \$0)
R=!U(!\$0, !\$1)
%
a U b | a R b | F(true) | U(a,b) -> R(a,b)
EOF
run 0 ./acc input || exit 1

cat >input <<EOF
U=(
    0 0 \$0
    0 1 \$1
    accept 1
  )
T=U(true,true)
%
T()|1
EOF
run 1 ./acc input || exit 1

cat >input <<EOF
A=(
  )
%
1
EOF
run 0 ./acc input || exit 1
