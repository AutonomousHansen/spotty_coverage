. ./defs

set -e

cat >input1 <<EOF
acc = p1;
s1, s3, "a", p1;
s1, s2, "b", p1;
s2, s1, "!a", p1;
s2, s3, "c", p1;
EOF

cat >input2 <<EOF
acc=p2 p3;
s1, s2, "b", p2;
s2, s1, "a", p3;
EOF

cat >expected <<EOF
acc = "p3" "p2" "p1";
"0 * 0", "1 * 1", "a & b", "p2" "p1";
"0 * 0", "2 * 1", "b", "p2" "p1";
"2 * 1", "1 * 0", "a & c", "p3" "p1";
EOF

run 0 ../explprod input1 input2 | tee stdout
diff stdout expected
rm input1 input2 stdout expected
