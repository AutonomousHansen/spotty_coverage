. ./defs

set -e

check_stutter()
{
  FORMULAS=$1
  SPOT_STUTTER_CHECK=$2
  run 0 ../../bin/ltlfilt --stutter-invariant -F $FORMULAS >exp
  for i in `seq $3 $4`
  do
    SPOT_STUTTER_CHECK=$i
    run 0 ../../bin/ltlfilt --stutter-invariant -F $FORMULAS >out
    diff out exp
  done
}

cat >ltl <<EOF
Fp0 R Fp2
G(p1 xor Xp2)
EOF

check_stutter ltl 0 1 8
