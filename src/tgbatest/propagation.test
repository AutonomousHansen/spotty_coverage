. ./defs

set -e

# Test1

run 0 ../ltl2tgba -pr -taa 'a U b' > stdout

cat >expected <<EOF
digraph G {
  0 [label="", style=invis, height=0]
  0 -> 1
  1 [label="1"]
  1 -> 1 [label="a\n"]
  1 -> 2 [label="b\n{Acc[b]}"]
  2 [label="2"]
  2 -> 2 [label="1\n{Acc[b]}"]
}
EOF

diff stdout expected

# Test2

run 0 ../ltl2tgba -pr 'a U b' > stdout

cat >expected <<EOF
digraph G {
  0 [label="", style=invis, height=0]
  0 -> 1
  1 [label="a U b"]
  1 -> 2 [label="b\n{Acc[b]}"]
  1 -> 1 [label="a & !b\n"]
  2 [label="1"]
  2 -> 2 [label="1\n{Acc[b]}"]
}
EOF

diff stdout expected

# Test3

cat >input <<EOF
acc = a;
"1", "2", "q", ;
"2", "3", "w", ;
"3", "4", "e", a;
EOF

run 0 ../ltl2tgba -pr -X input > stdout

cat >expected <<EOF
digraph G {
  0 [label="", style=invis, height=0]
  0 -> 1
  1 [label="1"]
  1 -> 2 [label="q\n{Acc[a]}"]
  2 [label="2"]
  2 -> 3 [label="w\n{Acc[a]}"]
  3 [label="3"]
  3 -> 4 [label="e\n{Acc[a]}"]
  4 [label="4"]
}
EOF

diff stdout expected

# Test4

cat >input <<EOF
acc = a b;
"1", "2", "q", a;
"2", "3", "w", ;
"3", "1", "e", b;
"2", "4", "r", ;
"4", "1", "t", b;
"1", "5", "y", a;
"5", "4", "u", ;
"5", "6", "i", ;
"6", "1", "o", b;
EOF

run 0 ../ltl2tgba -pr -X input > stdout

cat >expected <<EOF
digraph G {
  0 [label="", style=invis, height=0]
  0 -> 1
  1 [label="1"]
  1 -> 2 [label="q\n{Acc[b], Acc[a]}"]
  1 -> 3 [label="y\n{Acc[b], Acc[a]}"]
  2 [label="2"]
  2 -> 4 [label="w\n{Acc[b], Acc[a]}"]
  2 -> 5 [label="r\n{Acc[b], Acc[a]}"]
  3 [label="5"]
  3 -> 5 [label="u\n{Acc[b], Acc[a]}"]
  3 -> 6 [label="i\n{Acc[b], Acc[a]}"]
  4 [label="3"]
  4 -> 1 [label="e\n{Acc[b], Acc[a]}"]
  5 [label="4"]
  5 -> 1 [label="t\n{Acc[b], Acc[a]}"]
  6 [label="6"]
  6 -> 1 [label="o\n{Acc[b], Acc[a]}"]
}
EOF

diff stdout expected

rm input stdout expected