test_formula ()
{
  f=$1
  p=$(../literals "$f" | head -n1 | tr " " "\n" | sort | tr "\n" " ")
  n=$(../literals "$f" | tail -n1 | tr " " "\n" | sort | tr "\n" " ")

  test "$p" = " $2 "
  test "$n" = " $3 "
}

. ./defs
set -e

test_formula 'a | !b' 'a' 'b'
test_formula 'a | b | d | c | !e | !f' 'a b c d' 'e f'
test_formula '!!!!!!a | !!!!!!!!!b' 'a' 'b'
test_formula 'a | !a & !b' 'a' 'a b'
test_formula 'a -> b' 'b' 'a'
test_formula 'a <-> b' 'a b' 'a b'
test_formula 'a ^ b' 'a b' 'a b'
